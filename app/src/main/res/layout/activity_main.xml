<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.main.activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/mainActivityAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mainActivityTopAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:menu="@menu/main_activity_top_app_bar"
            app:titleTextColor="@color/black"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>

        <!--if the TabLayout lifts on scroll, try putting it outside the AppBar layout-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mainTabLayout"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"
            app:tabTextColor="@color/colorSecondary"
            app:tabIndicatorColor="@color/colorSecondary"
            android:outlineSpotShadowColor="@color/colorSecondary"
            app:tabSelectedTextColor="@color/colorSecondary"
            app:tabMode="scrollable"
            app:tabContentStart="56dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/mainTabLayoutAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_layout_all" />

        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Scrollable content -->

    </androidx.core.widget.NestedScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/workoutItemsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.fragment.app.FragmentContainerView>









    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/workouts_recycler_item"
        android:layout_margin="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addWorkoutFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:backgroundTint="@color/colorSecondary"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_24"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>